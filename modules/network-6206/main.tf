resource "azurerm_network_security_rule" "allow_http" {
  name                        = "AllowHTTP_${var.student_number}"
  priority                    = 1005
  direction                   = "Inbound"
  access                      = "Allow"
  protocol                    = "Tcp"
  source_port_range           = "*"
